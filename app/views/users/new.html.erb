<h1>新規アカウント登録</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-3">
  <%= f.label :名　前　　　　　　　　%>
  <%= f.text_field :name %>
  </div>

  <div class="col-md-3">
  <%= f.label :e−mail　　　　　　　　 %>
  <%= f.email_field :email %>
  </div>

  <div class="col-md-3">
  <%= f.label :パスワード（6文字以上）%>
  <%= f.password_field :password %>
  </div>

  <div class="col-md-3">
  <%= f.label :パスワード（　再入力　）%>
  <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "登録する", class: "btn btn-primary btn-normal" %>
</div>
<% end %>
