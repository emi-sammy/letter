<h1>詳細画面</h1>

<p class="panel panel-default content_show">内容: <%= @letter.content %></p>

<br>

<p class="panel panel-default">投稿者: <%= @user.name %></p>

<% unless @letter.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(letter_id: @letter.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<p class="text-center"><%= link_to '一覧に戻る', letters_path%></p>
